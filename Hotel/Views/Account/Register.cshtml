@model RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Login" class="control-label">Введите логин</label><br />
            <input type="text" asp-for="Login" class="form-control"/>
        </div>
        <div>
            <label asp-for="Password" class="control-label">Введите пароль</label><br />
            <input asp-for="Password" class="form-control"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Далее" class="btn" />
        </div>
    </div>
</form>