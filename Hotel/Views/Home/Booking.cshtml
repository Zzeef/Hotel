@model Hotel.WEB.Model.SettlementCreateModel
@{
    ViewBag.Title = "Бронирование";
}
<div class="form-group">
    <label class="control-label" asp-for="Room.Number">Номер комнаты</label>
    <input type="text" asp-for="Room.Number" class="form-control" readonly/>
    <label class="control-label" asp-for="Category.Name">Категория</label>
    <input type="text" asp-for="Category.Name" class="form-control" readonly/>
    <label class="control-label" asp-for="Category.Bed">Кол. кроватей</label>
    <input type="text" asp-for="Category.Bed" class="form-control" readonly/>
    <label class="control-label" asp-for="Category.Price">Цена</label>
    <input type="text" asp-for="Category.Price" class="form-control" readonly/>
</div>

<form asp-action="booking" asp-controller="home">
    <input type="hidden" asp-for="Room.Id" />
    <div class="form-group">
        <label asp-for="Settlement.StartDate" class="control-label">Начальная дата</label>
        <input type="date" asp-for="Settlement.StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Settlement.EndDate" class="control-label">Конечная дата</label>
        <input type="date" asp-for="Settlement.EndDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Guest.FirstName" class="control-label">Имя</label>
        <input type="text" asp-for="Guest.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Guest.LastName" class="control-label">Фамилия</label>
        <input type="text" asp-for="Guest.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Guest.Patronymic" class="control-label">Отчество</label>
        <input type="text" asp-for="Guest.Patronymic" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Guest.BithDate" class="control-label">Дата рождения</label>
        <input type="text" asp-for="Guest.BithDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Guest.PassportId" class="control-label">Номер паспорта</label>
        <input type="text" asp-for="Guest.PassportId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
